# Configuración del Proyecto Mexa

# ======================
# TELEGRAM BOT
# ======================
# Token del bot de Telegram (obtener de @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# IDs de chat de administradores (separados por comas)
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321

# Configuración del bot
MAX_OFFERS_PER_MESSAGE=10
DEFAULT_MAX_PRICE=1000
DEFAULT_MIN_DISCOUNT=0

# ======================
# MINIO STORAGE
# ======================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=mexa-data
MINIO_USE_SSL=false

# ======================
# FARFETCH CREDENTIALS
# ======================
# Credenciales por defecto para scraping (opcional)
DEFAULT_FARFETCH_EMAIL=your_email@example.com
DEFAULT_FARFETCH_PASSWORD=your_password

# ======================
# PROXY CONFIGURATION
# ======================
# Configuración de proxies (opcional)
PROXY_ROTATION_STRATEGY=round-robin
PROXY_VALIDATION_INTERVAL=300000

# ======================
# API CONFIGURATION
# ======================
# Configuración de la API
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGIN=*

# ======================
# WORKFLOW ENGINE
# ======================
# Configuración del motor de workflows
WORKFLOW_MAX_EXECUTION_TIME=300000
WORKFLOW_CLEANUP_INTERVAL=3600000

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
LOG_FORMAT=json

# ======================
# ENVIRONMENT
# ======================
NODE_ENV=development
PORT=3000
